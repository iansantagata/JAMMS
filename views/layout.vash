<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
  <title>JAMMS - Just a Music Maintainer for Spotify</title>
  <!-- Required meta tags for Bootstrap CSS -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
    crossorigin="anonymous">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="@html.raw('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css')"
    integrity="sha384-zcT220VeVe5gEsYILZFoQoucXuQrFM1fJK1tbbfvKt77wPAQwUJWCRlnXRs/HENS"
    crossorigin="anonymous">
  <!-- JQuery JavaScript -->
  <script src="https://code.jquery.com/jquery-3.5.1.min.js"
    integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
    crossorigin="anonymous"></script>
  <!-- Popper.js JavaScript -->
  <script src="@html.raw('https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js')"></script>
  <!-- Bootstrap JavaScript -->
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
    integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
    crossorigin="anonymous"></script>
  <!-- Helper Functions Used Across the App -->
  <script src="scripts/helperFunctions.js"></script>
  <!-- Favicon -->
  <link rel="shortcut icon" href="images/favicon/favicon.ico" type="image/x-icon">
</head>

<body class="d-flex flex-column h-100">

  <script defer src="scripts/layout.js"></script>

  <header class="card-header p-0 mb-2">
    <nav class="navbar navbar-expand-sm navbar-light">
      <div class="container">
        <span class="navbar-brand font-weight-bold px-3">JAMMS</span>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#headerCollapseList">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="headerCollapseList">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item">
              @if (!model.isAwaitingLogin && !model.isLoginError)
              {
                <a class="nav-link" href="/home">Home</a>
              }
              else
              {
                <a class="nav-link" href="/">Home</a>
              }
            </li>
            <li class="nav-item">
              @if (!model.isAwaitingLogin && !model.isLoginError)
              {
                <a class="nav-link" href="/logout">Log Out</a>
              }
              else
              {
                <a class="nav-link" href="/login">Log In</a>
              }
            </li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main role="main" class="flex-shrink-0">
    <div class="container text-center">
      @html.block('content')
    </div>
  </main>

  <footer class="footer card-footer p-0 mt-auto small">
    <nav class="navbar navbar-expand navbar-light">
      <div class="container">
        <ul class="navbar-nav">
          <li class="nav-item mr-2">
            <span class="navbar-text">&copy; 2020</span>
          </li>
          <span class="navbar-text">â€¢</span>
          <li class="nav-item">
            <a class="nav-link" href="@html.raw('mailto:admin@jamms.app')">Contact</a>
          </li>
        </ul>
        <!-- Musical Bridged 8th Notes HTML Entity Code -->
        <span class="navbar-text">&#9835;</span>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="https://github.com/iansantagata/jamms">Source</a>
          </li>
          <span class="navbar-text">&bull;</span>
          <li class="nav-item">
            <a class="nav-link" href="http://iansantagata.com">Author</a>
          </li>
        </ul>
      </div>
    </nav>
  </footer>

</body>
</html>
