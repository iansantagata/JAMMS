<!DOCTYPE html>
<html lang="en" class="h-100">

<head>
  <title>JAMMS - Just a Music Maintainer for Spotify</title>
  <!-- Required meta tags for Bootstrap CSS -->
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z"
    crossorigin="anonymous">
  <!-- Bootstrap Icons -->
  <link rel="stylesheet" href="@html.raw('https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.min.css')"
    integrity="sha384-zcT220VeVe5gEsYILZFoQoucXuQrFM1fJK1tbbfvKt77wPAQwUJWCRlnXRs/HENS"
    crossorigin="anonymous">
  <!-- JQuery JavaScript -->
  <script src="external/jquery.min.js"></script>
  <!-- Bootstrap JavaScript -->
  <script src="external/bootstrap.bundle.min.js"></script>
  <!-- Helper Functions Used Across the App -->
  <script src="scripts/helperFunctions.js"></script>
  <!-- Favicon -->
  <link rel="icon" href="images/favicon/favicon.ico" type="image/x-icon">
</head>

<body class="d-flex flex-column h-100">

  <header class="card-header p-0 mb-2">
    <nav class="navbar navbar-expand-md navbar-light">
      <div class="container">

        <span class="navbar-brand font-weight-bold px-3">JAMMS</span>

        <a class="navbar-toggler" role="button" data-toggle="collapse" data-target="#headerCollapseList">
          <i class="navbar-toggler-icon"></i>
        </a>

        <div class="collapse navbar-collapse" id="headerCollapseList">
          <ul class="navbar-nav ml-auto">
            @if (!model.isAwaitingLogin && !model.isLoginError)
            {
              <li class="nav-item">
                <a class="nav-link" href="/home">
                  <i class="bi bi-house-door-fill"></i>
                  <span>Home</span>
                </a>
              </li>
              <li class="nav-item dropdown">
                <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown">
                  <i class="bi bi-music-note-list"></i>
                  <span>Playlists</span>
                  </a>
                <div class="dropdown-menu">
                  <a class="dropdown-item" href="/createSmartPlaylist">Create Smart Playlist</a>
                  <div class="dropdown-divider"></div>
                  <a class="dropdown-item" href="/playlists">See All Playlists</a>
                </div>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/help">
                  <i class="bi bi-question-circle-fill"></i>
                  <span>Help</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/logout">
                  <i class="bi bi-door-closed-fill"></i>
                  <span>Log Out</span>
                </a>
              </li>
            }
            else
            {
              <li class="nav-item">
                <a class="nav-link" href="/">
                  <i class="bi bi-house-door-fill"></i>
                  <span>Home</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link" href="/help">
                  <i class="bi bi-question-circle-fill"></i>
                  <span>Help</span>
                </a>
              </li>
            }
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <main role="main" class="flex-shrink-0">
    <div class="container text-center">
      @html.block('content')
    </div>
  </main>

  <footer class="footer card-footer p-0 mt-auto small">
    <nav class="navbar navbar-expand navbar-light">
      <div class="container">
        <ul class="navbar-nav">
          <li class="nav-item mr-2">
            <span class="navbar-text">&copy; 2020</span>
          </li>
          <span class="navbar-text">
            <i class="bi bi-dot"></i>
          </span>
          <li class="nav-item">
            <a class="nav-link" href="/help">Contact</a>
          </li>
        </ul>
        <span class="navbar-text">
          <i class="bi bi-music-note-beamed"></i>
        </span>
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="https://github.com/iansantagata/jamms">Source</a>
          </li>
          <span class="navbar-text">
            <i class="bi bi-dot"></i>
          </span>
          <li class="nav-item">
            <a class="nav-link" href="http://iansantagata.com">Author</a>
          </li>
        </ul>
      </div>
    </nav>
  </footer>

</body>
</html>
