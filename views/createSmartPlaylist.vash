@html.extend('layout', function(model) {
	@html.block('content', function(model) {
    <h2>Create Smart Playlist</h2>

    <div id="playlist" class="row align-items-center justify-content-around">
      <div class="col-9 text-wrap my-3">
        <form>
          <div class="form-group">
            <label for="playlistNameInput">Playlist Name</label>
            <input type="text" name="playlistName" class="form-control" id="playlistNameInput" placeholder="Your Playlist" required />
          </div>

          <h4 class="my-3">Rules</h4>
          @{
            var playlistRuleTypeElementId = 'playlistRuleTypeInput-0';
            var playlistRuleOperatorElementId = 'playlistRuleOperatorInput-0';
            var playlistRuleTextElementId = 'playlistRuleTextInput-0';
          }
          <div class="form-row" id="rule-0">
            <div class="col-2">
              <button type="button" name="removeRuleButton-0" class="btn btn-outline-danger btn-sm form-control">Remove Rule</button>
            </div>
            <div class="col-3">
              <select name="playlistRuleType-0" class="form-control" id="@playlistRuleTypeElementId" required >
                <option value="artist" selected>Artist Name</option>
                <option value="song">Song Name</option>
                <option value="album">Album Name</option>
                <option value="year">Release Year</option>
                <option value="genre">Genre</option>
              </select>
            </div>
            <div class="col-3">
              <select name="playlistRuleOperator-0" class="form-control" id="@playlistRuleOperatorElementId" required>
                <option value="equal" selected>is</option>
                <option value="notEqual">is not</option>
                <option value="greaterThan">is greater than</option>
                <option value="lessThan">is less than</option>
                <option value="contains">contains</option>
              </select>
            </div>
            <div class="col-4">
              <input type="text" name="playlistRuleText-0" class="form-control" id="@playlistRuleTextElementId" placeholder="Your Rule Data" required />
            </div>
          </div>
          <button type="button" name="addRuleButton" class="btn btn-outline-info btn-sm my-3">Add Rule</button>

          <h4 class="my-3">Optional Settings</h4>
          @{
            var playlistLimitEnabledElementId = 'playlistLimitEnabledInput';
            var playlistLimitValueElementId = 'playlistLimitValueInput';
            var playlistLimitTypeElementId = 'playlistLimitTypeInput';
          }
          <div class="form-row">
            <div class="col-1">
              <div class="form-check-inline">
                <input type="checkbox" name="playlistLimitEnabled" class="form-check-input" id="@playlistLimitEnabledElementId" value="false" />
              </div>
            </div>
            <div class="col-3">
              <p>Limit playlist to</p>
            </div>
            <div class="col-4">
              <input type="number" name="playlistLimitValue" class="form-control" id="@playlistLimitValueElementId" min="1" value="25" disabled />
            </div>
            <div class="col-4">
              <select name="playlistLimitType" class="form-control" id="@playlistLimitTypeElementId" disabled>
                <option value="songs" selected>Songs</option>
                <option value="minutes">Minutes</option>
                <option value="hours">Hours</option>
              </select>
            </div>
          </div>

          @{
            var playlistOrderEnabledElementId = 'playlistOrderEnabledInput';
            var playlistOrderDirectionElementId = 'playlistOrderDirectionInput';
            var playlistOrderFieldElementId = 'playlistOrderFieldInput';
          }
          <div class="form-row">
            <div class="col-1">
              <div class="form-check-inline">
                <input type="checkbox" name="playlistOrderEnabled" class="form-check-input" id="@playlistOrderEnabledElementId" value="false" />
              </div>
            </div>
            <div class="col-3">
              <p>Order songs in</p>
            </div>
            <div class="col-4">
              <select name="playlistOrderDirection" class="form-control" id="@playlistOrderDirectionElementId" disabled>
                <option value="ascending" selected>Ascending Order</option>
                <option value="descending">Descending Order</option>
              </select>
            </div>
            <div class="col-1">
              <p>by</p>
            </div>
            <div class="col-3">
              <select name="playlistOrderField" class="form-control" id="@playlistOrderFieldElementId" disabled>
                <option value="artist" selected>Artist Name</option>
                <option value="song">Song Name</option>
                <option value="album">Album Name</option>
                <option value="year">Release Year</option>
                <option value="genre">Genre</option>
                <option value="addDate">Date Added to Library</option>
              </select>
            </div>
          </div>
          <script type="text/javascript">
            var playlistLimitEventElement = document.getElementById("@playlistLimitEnabledElementId");
            playlistLimitEventElement.addEventListener("click", controlEnablementOfLimitElements);

            var playlistOrderEventElement = document.getElementById("@playlistOrderEnabledElementId");
            playlistOrderEventElement.addEventListener("click", controlEnablementOfOrderElements);

            function controlEnablementOfLimitElements()
            {
              controlEnablementOfElementById("@playlistLimitValueElementId");
              controlEnablementOfElementById("@playlistLimitTypeElementId");
            }

            function controlEnablementOfOrderElements()
            {
              controlEnablementOfElementById("@playlistOrderDirectionElementId");
              controlEnablementOfElementById("@playlistOrderFieldElementId");
            }

            function controlEnablementOfElementById(id)
            {
              var element = document.getElementById(id);
              var isDisabled = element.disabled;
              element.disabled = !isDisabled;
            }
          </script>

          <div class="form-row justify-content-start">
            <div class="col-1">
              <div class="form-check-inline">
                <input type="checkbox" name="playlistIsPublic" class="form-check-input" id="playlistPublicInput" value="false" />
              </div>
            </div>
            <div class="col-3">
              <p>Set playlist to public</p>
            </div>
          </div>

          <!-- TODO - Create endpoint for createSmartPlaylist -->
          <div class="mt-3">
            <button type="submit" formaction="/createSmartPlaylist" formmethod="post" class="btn btn-info">Create Smart Playlist</button>
          </div>
        </form>
      </div>
    </div>
  })
})
